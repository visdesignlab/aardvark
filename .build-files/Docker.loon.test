# Start from the Docker Compose image
FROM docker/compose:1.24.1 AS compose

# Install Python
RUN apk add --no-cache python3 py3-pip

# Optionally, install additional Python packages
# RUN pip install --no-cache-dir <your-packages>

# Set the working directory
WORKDIR /app

# Copy application files into the container
COPY . .

# Run a command to keep the container running
CMD ["python", "-c", "import time; while True: time.sleep(3600)"]